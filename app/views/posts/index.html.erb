<% @posts.each do |post| %>
	<div class="panel panel-default">

 		<img src="<%= post.getFeaturedImage.image_url%>" style="max-width:100%;">
 		<div class="post-container">
 			<p style="font-style:italic;">By Ayako Kyodo; Posted<%= post.created_at.strftime("%d %b. %Y")%></p>
			<h1><%= post.title %></h1>
			<% post.tag_list.each do |tag|%>
				<span class="label label-primary"><%=tag%></span>
			<% end%>
			<p style="margin-top: 5px;"><%= post.content %></p>
			<%= button_to "Show more", post_path(post.id),method: :get,class: "btn btn-primary",style: "float: right" %>
		</div>
	</div>
<% end %>
